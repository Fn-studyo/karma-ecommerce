                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- End Banner Area -->

    <!--================Single Product Area =================-->
    <div class="product_image_area">
        <div class="container">
            <div class="row s_product_inner">
			{% if images is iterable %}
				<div class="col-lg-6">
					<div class="s_Product_carousel">
						{% for image in images %}
						<div class="single-prd-item">
							<img class="img-fluid" src="{{ url('/') }}/files/{{ image }}"  alt="">
						</div>
						{% endfor %}
					</div>
				</div>
				{% else %}
				<div class="col-lg-6">
				<div class="container">
					<img src="{{ url('/') }}/files/{{ image }}" width="100%" />
				</div>
				</div>		
			{% endif %}
                <div class="col-lg-5 offset-lg-1">
                    <div class="s_product_text">
                        <h3>{{ product.name }}</h3>
                        <h2>NGN {{ product.price }}</h2>
                        <ul class="list">
                    <li><a class="active" href="#"><span>Category</span> : Household</a></li>
                    <li><a href="#"><span>Availibility</span> : {{ stockLevel | raw }}</a></li>
                        </ul>
                        <p style="font-size:16px;">
                            {{ product.description | raw }}
                        </p>
                {% if product.quantity > 0 %}
                    <form action="{{ route('cart.store') }}" method="POST">
                        <input name="_token" type="hidden" value="{{ csrf_token() }}">
                        <input type="hidden" name="id" value="{{ product.id }}">
                        <input type="hidden" name="name" value="{{ product.name }}">
                        <input type="hidden" name="price" value="{{ product.price }}">
                        <input type="hidden" name="slug" value="{{ product.slug }}">
                        <div class="card_area d-flex align-items-center" >
                            <button style="border:none;"type='submit'  class="primary-btn" >Add to Cart</button>
{#                             <a class="icon_btn" href="#"><i class="lnr lnr lnr-diamond"></i></a>
                            <a class="icon_btn" href="#"><i class="lnr lnr lnr-heart"></i></a> #}
                        </div>
                    </form>
                {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
